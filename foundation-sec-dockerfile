FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements-foundation.txt .

# Install Python dependencies with minimal CUDA support
RUN pip install --no-cache-dir -r requirements-foundation.txt

# Copy application code
COPY foundation_sec_api.py .

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["uvicorn", "foundation_sec_api:app", "--host", "0.0.0.0", "--port", "8000"]